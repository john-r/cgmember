    if ($f == 'fromMe') return $banking ? !$toMe : $a->isMe($x->payer);
    if ($f == 'byMe') return $banking ?: ($x->taking xor !$toMe);
    if ($f == 'reallyToMe') return ($toMe xor $amount < 0);
