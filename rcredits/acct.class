        $goods = FOR_NONGOODS;
        $taking = TRUE;
        if (new r\X(compact(ray('amount payer payee goods for taking')))) $left -= $amount;
        if ($left <= 0) break;
      }
      
    }
    return round($need - $left, 2);
  }

